.auction-item.auction-item--skin-3
  .auction-item__header
    div.lot
      a(href='#') Lot 1
    .time
      | 8d 4h 39m
  .auction-item__image
    img.img-fluid(src=item.image)
  .auction-item__body
    a.auction-item__title(href="/t21-auction-item-detail.html")
      span.title #{item.title}
    .auction-item__meta
      div
        span.title.text-muted Now At
        span.value #{item.now}
      div
        a(href="#")
          .btn.btn-outline-primary
            i.icon-eye
            span.text Watch
      .bid
        a(href="#").btn.btn-primary.btn-sm Bid
