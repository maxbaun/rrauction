// Open Ticket Modal
form(method='post' id='modalWantlist' tabindex='-1').modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h4.modal-title Create New Wantlist
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        .form-group
          label(for='wantlist-name') Search Name
          input(type='text' id='wantlist-name' name='wantlist-name' required).form-control
        .form-group
          label(for="wantlist-keywords") Keywords
          input(type="text" id='wantlist-keywords' name='wantlist-keywords' required).form-control
        .form-group
          .custom-control.custom-checkbox.d-block
            input(type='checkbox' id='wantlist-email' name='wantlist-email' checked).custom-control-input
            label(for='wantlist-email').custom-control-label Email Me

      .modal-footer
        button(type='submit' class='btn btn-primary') Submit Wantlist
