              include partials/auction-item
            .col-12.col-md-4.col-sm-6.mb-30
              - var item = {image: '/img/rr/items/3410396_1.jpg', title: 'John F. Kennedy\'s Monogrammed Shaving Kit Used as President', description: 'This is the description of the auction item', now: '$6,000', next: '$6,500', overlay: 'My Item', overlayClass: 'text-warning'}
