extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'T23 - Login'
  - var parentMenu = 'Account'
  - var menuTitle = 'T23 - Login'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'T23 - Login'}]

//- Page Content
block content
  .container.padding-bottom-3x.mb-2
    .row
      .col-md-6
        form(method='post').card
          .card-body.bg-secondary
            h4.margin-bottom-1x Account Login
            .form-group.input-group
              input(type='email' placeholder='Email or Bidder Number' name='email' required).form-control
              span.input-group-addon
                i.icon-mail
            .form-group.input-group
              input(type='password' placeholder='Password' name='password' required).form-control
              span.input-group-addon
                i.icon-lock
            .d-flex.flex-wrap.justify-content-between.padding-bottom-1x
              .custom-control.custom-checkbox
                input(type='checkbox' id='remember_me' checked).custom-control-input
                label(for='remember_me').custom-control-label Remember me
              a(href='/t08-forgot-password.html').navi-link Forgot password?
            .text-sm-right
              button(type='submit' class='btn btn-primary margin-bottom-none') Login

      .col-md-6
        .padding-top-3x.hidden-md-up
        h3.margin-bottom-1x Create User Account
        p Features include want list creation, accessing past auction archives, and receiving auction alerts.
        form(method='post').row
          .col-sm-6
            .form-group
              label(for='reg-fn') First Name
              input(type='text' id='reg-fn' required).form-control
          .col-sm-6
            .form-group
              label(for='reg-ln') Last Name
              input(type='text' id='reg-ln' required).form-control
          .col-sm-6
            .form-group
              label(for='reg-email') E-mail Address
              input(type='email' id='reg-email' required).form-control
          .col-sm-6
            .form-group
              label(for='reg-phone') Phone Number
              input(type='text' id='reg-phone' required).form-control
          .col-sm-6
            .form-group
              label(for='reg-pass') Password
              input(type='password' id='reg-pass' required).form-control
          .col-sm-6
            .form-group
              label(for='reg-pass-confirm') Confirm Password
              input(type='password' id='reg-pass-confirm' required).form-control
          .col-sm-8
            .form-group
              .custom-control.custom-checkbox
                input(type='checkbox' id='email_signup' name='signup' checked).custom-control-input
                label(for='email_signup').custom-control-label Yes, I want to receive email updates from RR
          .col-sm-4.text-sm-right
            button(type='submit' class='btn btn-primary margin-bottom-none') Register
