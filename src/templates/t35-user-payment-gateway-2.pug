extends partials/layout

//- Override default config variables
append config
  - var isPageTitle = true
  - var parentMenu = 'Shop'
  - var pageTitle = 'T35 - User Payment Gateway (Step 2)'
  - var menuTitle = 'Shipping'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'T35 - User Payment Gateway (Step 2)'}]
  - var isLoggedIn = true


//- Page Content
block content
  .user-payment-gateway-page.padding-bottom-3x
    .container
      .row

        // Checkout Adress
        .col-xl-9.col-lg-8
          .steps.flex-sm-nowrap.mb-5
            a(href='/t35-user-payment-gateway-1.html').step
              h4.step-title
                i.icon-check-circle
                | 1. Address
            a(href='/t35-user-payment-gateway-2.html').step.active
              h4.step-title 2. Shipping
            a(href='/t35-user-payment-gateway-3.html').step
              h4.step-title 3. Payment
            a(href='/t35-user-payment-gateway-4.html').step
              h4.step-title 4. Review

          h4 Choose Shipping Method
          hr.padding-bottom-1x
          .table-responsive
            table.table.table-hover
              thead.thead-default
                tr
                  th
                  th Shipping method
                  th Delivery time
                  th Handling fee
              tbody
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='courier' name='shipping-method' checked).custom-control-input
                      label(for='courier').custom-control-label
                  td.align-middle
                    span.text-gray-dark Courier
                    br
                    span.text-muted.text-sm All Addresses(default zone), United States & Canada
                  td.align-middle 2 - 4 days
                  td.align-middle $26.50
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='local' name='shipping-method').custom-control-input
                      label(for='local').custom-control-label
                  td.align-middle
                    span.text-gray-dark Local Shipping
                    br
                    span.text-muted.text-sm All Addresses(default zone), United States & Canada
                  td.align-middle up to one week
                  td.align-middle $10.00
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='flat' name='shipping-method').custom-control-input
                      label(for='flat').custom-control-label
                  td.align-middle
                    span.text-gray-darkm Flat Rate
                    br
                    span.text-muted.text-sm All Addresses(default zone)
                  td.align-middle 5 - 7 days
                  td.align-middle $33.85
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='ups' name='shipping-method').custom-control-input
                      label(for='ups').custom-control-label
                  td.align-middle
                    span.text-gray-dark UPS Ground Shipping
                    br
                    span.text-muted.text-sm All Addresses(default zone)
                  td.align-middle 4 - 6 days
                  td.align-middle $18.00
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='pickup' name='shipping-method').custom-control-input
                      label(for='pickup').custom-control-label
                  td.align-middle
                    span.text-gray-dark Local Pickup from store
                    br
                    span.text-muted.text-sm All Addresses(default zone)
                  td.align-middle &mdash;
                  td.align-middle $0.00
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='locker' name='shipping-method').custom-control-input
                      label(for='locker').custom-control-label
                  td.align-middle
                    span.text-gray-dark Pick Up at Unishop Locker
                    br
                    span.text-muted.text-sm All Addresses(default zone), United States & Canada
                  td.align-middle &mdash;
                  td.align-middle $9.99
                tr
                  td.align-middle
                    .custom-control.custom-radio.mb-0
                      input(type='radio' id='global' name='shipping-method').custom-control-input
                      label(for='global').custom-control-label
                  td.align-middle
                    span.text-gray-dark Unishop Global Export
                    br
                    span.text-muted.text-sm All Addresses(default zone), outside United States
                  td.align-middle 3 - 4 days;
                  td.align-middle $25.00

          .d-flex.justify-content-between.paddin-top-1x.mt-4
            a(href='/t35-user-payment-gateway-1.html' class='btn btn-outline-secondary')
              i.icon-arrow-left
              span.hidden-xs-down &nbsp;Back
            a(href='/t35-user-payment-gateway-3.html' class='btn btn-primary')
              span.hidden-xs-down Continue&nbsp;
              i.icon-arrow-right

        // Sidebar
        .col-xl-3.col-lg-4
          include partials/checkout-sidebar
