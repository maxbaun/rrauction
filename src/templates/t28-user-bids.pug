extends partials/layout

//- Override default config variables
append config
  - var isPageTitle = true
  - var parentMenu = 'Account'
  - var pageTitle = 'T28 - User Bids'
  - var menuTitle = 'Account'
  - var pageTitle = 'T28 - User Bids'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {title: 'Account', link: '/t26-user-profile.html'}, {'title': 'T28 - User Bids'}]
  - var isLoggedIn = true

//- Page Content
block content
  -
    var items = [
      {
        status: 'Winning',
        statusClass: 'text-success',
        cardClass: 'winning',
        lotNo: '#1',
        lotTitle: 'Consequat eiusmod fugiat irure sit enim excepteur pariatur velit enim excepteur',
        time: '8d / 4h / 39m',
        nowAt: '$300.00',
        nextBid: '$0.00',
        max: '$4000.00',
        bidText: 'Bid'
      },
      {
        status: 'Outbid',
        statusClass: 'text-danger',
        cardClass: 'outbid',
        lotNo: '#2',
        lotTitle: 'Consequat eiusmod fugiat irure sit enim excepteur pariatur velit enim excepteur',
        time: '8d / 4h / 39m',
        nowAt: '$400.00',
        nextBid: '$0.00',
        max: '$4000.00',
        bidText: 'Bid'
      },
      {
        status: 'Closed',
        statusClass: 'text-label',
        lotNo: '#3',
        lotTitle: 'Consequat eiusmod fugiat irure sit enim excepteur pariatur velit enim excepteur',
        time: 'Closed',
        nowAt: '$500.00',
        nextBid: '$0.00',
        max: '$4000.00',
        bidText: 'View'
      },
      {
        status: 'Winning',
        statusClass: 'text-success',
        cardClass: 'winning',
        lotNo: '#4',
        lotTitle: 'Consequat eiusmod fugiat irure sit enim excepteur pariatur velit enim excepteur',
        time: 'Closed',
        nowAt: '$500.00',
        nextBid: '$0.00',
        max: '$4000.00',
        bidText: 'Bid'
      },
    ]
  .user-bids-page.padding-bottom-3x
    .container
      .row
        .col-12
          .account-products
            ul.list-unstyled.list-inline
              li.nav-item: a(href='/t28-user-bids.html'): strong My Bids
              li.nav-item: a(href='/t27-user-watchlist.html') My Watchlist
              li.nav-item: a(href='/t29-user-consignments.html') My Consignments
            ul(class='nav nav-tabs nav-justified')
              li.nav-item
                a(href="#").nav-link Current Auctions
              li.nav-item
                a(href="#").nav-link.active Past Auctions
            div.controls.mt-3.mb-3
              .filter
                label(for="sort").text-muted.text-small Sort By:
                select(name="sort" id="sort").form-control
                  option(value="Sort 1") Sort 1
                  option(value="Sort 2") Sort 2
                  option(value="Sort 3") Sort 3
                  option(value="Sort 4") Sort 4
              .filter
                label(for="filter").text-muted.text-small Filter By:
                select(name="filter" id="filter").form-control
                  option(value="Filter 1") Filter 1
                  option(value="Filter 2") Filter 2
                  option(value="Filter 3") Filter 3
                  option(value="Filter 4") Filter 4

            .hidden-lg-up
              each item in items
                .card.mb-3(class=item.cardClass)
                  .card-body
                    ul.list-unstyled
                      li
                        span(class=item.statusClass)
                          | #{item.status}
                      li #{item.lotNo}
                      li
                        a(href="#") #{item.lotTitle}
                      li
                        strong Time Remaining:
                        | &nbsp;#{item.time}
                      li
                        strong Now at:
                        | &nbsp;#{item.nowAt}
                      li
                        strong Next bid:
                        | &nbsp;#{item.nextBid}
                      li
                        strong My Max bid:
                        | &nbsp;#{item.max}
                      li
                        a(href="#").btn.btn-primary.btn-sm #{item.bidText}

            .table-responsive.shopping-cart.hidden-md-down
              table.table
                thead
                  tr
                    th
                      a(href='#') Status
                    th
                      a(href='#') Lot #
                    th
                      a(href='#') Lot Title
                    th
                      a(href='#') Time Remaining
                    th
                      a(href='#') Now at
                    th
                      a(href='#') Next bid
                    th
                      a(href='#') My Max Bid
                    th.text-center
                      a(href='#') Bid
                tbody
                  each item in items
                    tr
                      td(class=item.statusClass) #{item.status}
                      td #{item.lotNo}
                      td
                        a(href="#") #{item.lotTitle}
                      td #{item.time}
                      td #{item.nowAt}
                      td #{item.nextBid}
                      td #{item.max}
                      td.text-center: a(href="#").btn.btn-primary.btn-sm.m-0 #{item.bidText}

            include partials/pagination
