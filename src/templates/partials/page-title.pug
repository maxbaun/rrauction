- var pageTitleClass = pageTitleClass ? pageTitleClass : 'page-title';

// Page Title
div(class=pageTitleClass)
  .container
    .column: h1 #{pageTitle}
    .column
      if breadcrumbs.length
        ul.breadcrumbs
          each breadcrumb in breadcrumbs
            if breadcrumb.link
              li
                - var linkatts = {'href': breadcrumb.link}
                a()&attributes(linkatts)= breadcrumb.title
              li.separator &nbsp;
            else
              li= breadcrumb.title
